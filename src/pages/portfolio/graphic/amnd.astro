---
import Layout from "../../../layouts/Layout.astro";
import Link from "../../../components/Link.astro";

import { Picture } from "astro:assets";

import portImage from "../../../images/portfolio/graphic/port-graphic-amnd-big.jpg";
---

<Layout
  title="A Midsummer Night's Dream"
  subTitle="Poster design"
  hasHeaderImg={false}
  showTechLogos={false}
  variant="stars">
  <main>
    <section>
      <Picture
        class="img"
        alt="Poster with title A Midsummer Night's Dream with the a brightly lit forest path"
        src={portImage}
      />
      <Link
        href="/portfolio/#graphic-design"
        text="Back to portfolio"
      />
    </section>
  </main>
</Layout>
<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
  }

  img {
    border: 1rem solid var(--primary);
  }
</style>
