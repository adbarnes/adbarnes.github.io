---
import { Picture } from "astro:assets";

interface Props {
  title: string;
  body: string;
  href: string;
  imgSrc: ImageMetadata;
  alt: string;
}

const { href, title, body, imgSrc, alt } = Astro.props;
---

<li class="link-card">
  <a href={href}
    ><Picture
      src={imgSrc}
      alt={alt}
      loading="lazy"
    />
    <span>
      <h2>
        {title}
      </h2>
      <p>
        {body}
      </p>
    </span>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
  }

  .link-card a {
    background-color: var(--primary);
    color: aliceblue;
    padding: 1rem;
    text-decoration: none;
    height: 100%;
  }

  .link-card > span {
    background-color: black;
    color: aliceblue;
    padding: 1rem;
    text-decoration: none;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
