---
import { Picture } from "astro:assets";

interface Props {
  title: string;
  body: string;
  href: string;
  imgSrc: ImageMetadata;
  alt: string;
}

const { href, title, body, imgSrc, alt } = Astro.props;
---

<li class="link-card">
  <a href={href}
    ><Picture
      src={imgSrc}
      alt={alt}
      loading="lazy"
    />
    <span>
      <h2>
        {title}
      </h2>
      <p>
        {body}
      </p>
    </span>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  .link-card a {
    background-color: var(--primary);
    color: white;
    padding: 1rem;
    text-decoration: none;
    height: 100%;
    display: block;
    transition:
      transform 0.3s ease,
      background-color 0.3s ease;
  }

  .link-card a:hover {
    background-color: var(--secondary);
    transform: scale(1.02);
    animation: bounce 0.3s ease;
  }

  @keyframes bounce {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.03);
    }
    100% {
      transform: scale(1.02);
    }
  }
  .link-card a.active,
  .link-card a:hover {
    background-color: var(--secondary);
  }

  .link-card > span {
    background-color: var(--primary);
    color: white;
    padding: 1rem;
    text-decoration: none;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
