---
interface Props {
  title: string;
  subTitle: string;
}

const { title, subTitle } = Astro.props;
---

<div class="hero-container">
  <h1>
    {title}
  </h1>
  <p>
    {subTitle}
  </p>
</div>

<style>
  .hero-container {
    text-align: center;
    padding: 3rem;

    h1 {
      font-size: 5rem;
    }

    p {
      margin: auto;
      max-width: 880px;
      font-size: 2.5rem;
    }
  }
</style>
