---
import { Picture } from "astro:assets";
import Hero3d from "./Hero3d";

interface Props {
  title: string;
  subTitle: string;
  variant: string;
  headerImgSrc?: ImageMetadata;
}

const { title, subTitle, variant, headerImgSrc } = Astro.props;
---

<div class="hero-container">
  <h1 class="has-text-weight-semibold">
    {title}
  </h1>
  {
    variant === "vertical" ? (
      <>
        {headerImgSrc && (
          <div class="three">
            <Hero3d client:load />
          </div>
        )}
        <p>{subTitle}</p>
      </>
    ) : (
      <div class="container">
        {headerImgSrc && (
          <Picture class="intro-img box" src={headerImgSrc} alt="" />
        )}
        <p>{subTitle}</p>
      </div>
    )
  }
</div>

<style>
  .three {
    width: 100%;
    height: 600px;
    margin: 2rem 0;
    padding: 1rem 0;
  }

  .hero-container {
    text-align: center;
    padding: 3rem;

    max-width: calc(1248px - 2rem);
    margin: auto;

    h1 {
      font-size: 5rem;
      max-width: 1045px;
      margin-inline-start: auto;
      margin-inline-end: auto;
      word-wrap: break-word;
    }

    .container {
      display: flex;
      flex-direction: column;
    }

    @media screen and (max-width: 769px) {
      .container {
        flex-direction: column;
      }
    }

    .intro-img {
      height: auto;
      width: 600px;
      max-width: 100%;
      object-fit: cover;
      display: flex;
      margin: auto;
    }
  }

  p {
    margin: auto;
    max-width: 880px;
    font-size: 2.5rem;
    padding: 1rem;
  }
</style>
